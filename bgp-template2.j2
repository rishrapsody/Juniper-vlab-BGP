set routing-instances {{ customer_vrf }} instance-type virtual-router

set interfaces {{ inter_a }} unit 0 family inet address {{ local_a }}/24
set interfaces {{ inter_b }} unit 0 family inet address {{ local_b }}/24

set routing-instances {{ customer_vrf }} interface {{ inter_a }}
set routing-instances {{ customer_vrf }} interface {{ inter_b }}

