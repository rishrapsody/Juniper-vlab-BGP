set routing-instances {{ customer_vrf }} protocols bgp group ebgp neighbor {{ remote_a }} peer-as {{ as_a }}
set routing-instances {{ customer_vrf }} protocols bgp group ebgp neighbor {{ remote_b }} multihop ttl 2
set routing-instances {{ customer_vrf }} protocols bgp group ebgp neighbor {{ remote_b }} local-address {{ local_b }}
set routing-instances {{ customer_vrf }} protocols bgp group ebgp neighbor {{ remote_b }} peer-as {{ as_b }}
